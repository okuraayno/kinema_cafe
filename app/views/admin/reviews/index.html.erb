<h2>レビュー一覧</h2>
<div class='container'>
  <div class='row'>
    <%= form_with(url: admin_members_path, method: :get) do |form| %>
      <%= form.text_field :looking_for, placeholder: 'レビュー内容..', size: 30 %>
      <%= form.submit 'search', class: 'btn btn-secondary' %>
    <% end %>
  </div>
  <table class="mt-3">
    <thead>
      <tr>
        <th class="col-3">投稿者</th>
        <th class="col-3">レビュータイトル</th>
        <th class="col-3"></th>
        <th></th>
      </tr>
    </thead>
    <% @reviews.each do |review| %>
    <tbody>
      <tr>
        <td class="align-middle"><%= review.user.name %></td>
        <td class="align-middle"><%= review.title %></td>
        <td class="align-middle"><%= link_to '詳細へ', admin_review_path(review.id) %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  