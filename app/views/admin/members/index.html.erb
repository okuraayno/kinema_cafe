<h2>会員一覧</h2>
<div class='container'>
  <div class='row'>
    <%= form_with(url: admin_members_path, method: :get) do |form| %>
      <%= form.text_field :looking_for, placeholder: '会員名..', size: 30 %>
      <%= form.submit 'search', class: 'btn btn-secondary' %>
    <% end %>
  </div>
  <table>
    <% @members.each do |member| %>
    <tr>
      <td><%= member.id %></td>
      <td>
        <%= link_to admin_member_path(member.id) do %>
          <%= member.name %>
        <% end %>
      </td>
      <td><%= member.email %></td>
      <td>
        <% if member.is_active == true %>
          <span class="text-success font-weight-bold align-middle">有効</span>
        <% else %>
          <span class="text-secondary font-weight-bold align-middle">利用停止</span>
        <% end %>
      </td>
    </tr>
    <% end %>
    </table>
</div>

  