<div class="mt-3">
  <h5>コメント一覧</h5>
  <% review.comments.each do |comment| %>
    <div class="mb-5">
      <div class="col-7 mb-2">
        <%= link_to admin_member_path(comment.user.id) do %>
          <%= image_tag comment.user.get_profile_image(50,50) %>
          <%= comment.user.name %>
        <% end %>
      </div>
      <div class="ml-3">
        <%= comment.comment %><br>
        <%= comment.created_at.strftime('%Y/%m/%d') %>
        <%= link_to "不適切なコメントとして削除", admin_review_comment_path(review.id, comment.id), method: :delete, remote: true %>
      </div>
    </div>
  <% end %>
</div>