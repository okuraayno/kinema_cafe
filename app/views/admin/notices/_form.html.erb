<%= form_with model: notice, url: (notice.persisted? ? admin_notice_path(notice.id) : admin_notices_path), local: true do |f| %>

<div class="row justify-content-center">
  <div class="form-group my-3 col-lg-12">
    <%= f.text_field :title, placeholder: "情報タイトル", class: "form-control" %>
  </div>
  <div class="form-group mb-3 col-lg-12">
    <%= f.text_area :text, placeholder: "情報内容", class: "form-control" %>
  </div>

  <div class="form-group my-3 col-lg-12">
    <%= f.submit class:"float1" %>
  </div>
  </div>
<% end %>