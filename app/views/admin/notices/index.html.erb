<div class="container">
  <div class='row justify-content-center'>
    <div class="col-12">
      <div class="d-flex flex-row">
        <h3>お知らせ一覧</h3>
        <%= link_to new_admin_notice_path, class:"btn" do %>
          <i class="fa-solid fa-pen"></i>
        <% end %>
      </div>
      <hr>

      <table class="table table-borderless", style="color: #675D50;">
        <thead>
          <tr>
            <th class="col-2 text-center">情報解禁日</th>
            <th class="col-2 text-center">情報タイトル</th>
          </tr>
        </thead>
        <% @notices.each do |notice| %>
        <tbody>
          <tr>
            <td class="text-center"><%= notice.created_at %></td>
            <td class="text-center">
              <%= link_to notice.title, admin_notice_path(notice) %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <hr>
    </div>

</div>