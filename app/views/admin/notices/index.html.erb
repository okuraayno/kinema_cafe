<div class="container">
  <div class='row justify-content-center'>
    <div class="col-12">
      <h3>お知らせ一覧</h3>
      <hr>

      <table class="table table-borderless", style="color: #675D50;">
        <thead>
          <tr>
            <th class="col-2 text-center">情報解禁日</th>
            <th class="col-2 text-center">情報タイトル</th>
          </tr>
        </thead>
        <% @notices.each do |notice| %>
        <tbody>
          <tr>
            <td class="text-center"><%= notice.created_at %></td>
            <td class="text-center"><%= notice.title %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <hr>
    </div>

</div>