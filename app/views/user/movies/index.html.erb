<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h3><i class="fa-solid fa-film"></i> Movies</h3>
      <hr>
      <div class="my-2">
        <i class="fa-solid fa-magnifying-glass"></i>　映画タイトルで検索する
      </div>
      <div class="mb-3">
        <%= form_with url: movies_path, method: :get, local: :true do |f| %>
          <%= f.text_field :looking_for, placeholder: '映画タイトルを入力', size: 30 %>
          <%= f.submit 'search', class: "btn btn-outline-secondary btn-sm rounded-pill" %>
        <% end %>
      </div>

      <a role="button" data-toggle="collapse" href="#other_searches" aria-expanded="false" aria-controls="other_searches">
        その他の検索方法
        <span class="arrow"></span>
      </a>
      <div class="collapse" id="other_searches">
        <div class="my-2">
          <i class="fa-solid fa-magnifying-glass"></i>　キーワードで検索する
        </div>
        <div class="mb-3">
          <%= form_with url: keywords_path, method: :get, local: :true do |f| %>
            <%= f.text_field :keyword, placeholder: 'キーワードを入力', size: 30 %>
            <%= f.submit 'search', class: "btn btn-outline-secondary btn-sm rounded-pill" %>
          <% end %>
        </div>

        <div class="mb-2">
          <i class="fa-solid fa-tag"></i>　レビュータグで検索する
        </div>
        <div class="mb-3">
          <% @tags.each do |tag| %>
            <%= link_to tag, tags_path(tag: tag), class: "float1 mr-3 mb-2" %>
          <% end %>
        </div>
      </div>

      <hr>
      <div>
        <%= render 'index', moviews: @moviews %>
        <hr>
      </div>
    </div>

    <p class="pagetop float1">
      <a href="#container">
        <i class="fa-solid fa-angles-up"></i>
      </a>
    </p>

    <div class="text-center my-3">
      <%= paginate @movies %>
    </div>
  </div>
</div>
