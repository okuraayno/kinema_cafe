<div class="container">
  <div class="row justify-content-center">

    <div class="col-lg-5 col-12 my-3">
      <%= render 'show', movie: @movie, average_score: @average_score, movie_genre_names: @movie_genre_names, keywords: @keywords %>
    </div>

    <div class="col-lg-7 col-12 mt-3">
      <% if current_user&.email != "guest@example.com" %>
        <div class="d-flex flex-row mb-2">
          <div class="p-2" id="favorite_btn_<%= @movie['id'] %>">
            <%= render 'user/favorites/btn', movie: @movie%>
          </div>
          <div class="p-2">
            <%= link_to "review", new_movie_review_path(movie_id: @movie['id']), class:"float1" %>
          </div>
        </div>
      <% end %>

      <div class="mb-6">
        <h5><b><i class="fa-solid fa-feather"></i> ユーザーレビュー・スコア</b></h5>
      </div>
      <div>
        <div class="my-3">
          <%= link_to "新着順", movie_path(latest: "true") %>
          <span>|</span>
          <%= link_to "評価の高い順", movie_path(star_count: "true") %>
        </div>
        <div style="max-height: 800px; overflow-y: auto;">
          <%= render 'user/reviews/movie_reviews', reviews: @reviews %>
        </div>
      </div>
    </div>

  </div>
</div>