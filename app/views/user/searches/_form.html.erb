<div class="my-2">
  <% if user_signed_in? %>
    <%= form_with url: users_path, method: :get, local: true do |f| %>
     <%= f.text_field :content, placeholder: "ユーザー名を入力", size: 30 %>
     <%= f.select :method, options_for_select({'完全一致' => 'perfect', '前方一致' => 'forward', '後方一致' => 'backward', '部分一致' => 'partial'}) %>
     <%= f.submit "search", class: "btn btn-outline-secondary btn-sm rounded-pill" %>
    <% end %>
  <% end %>
</div>