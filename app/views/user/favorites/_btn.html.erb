<% if movie && movie["id"] %>
  <% favorite = Favorite.find_by(movie_id: movie["id"], user_id: current_user.id) %>
  <% if favorite && favorite.persisted? %>
    <%= link_to movie_favorite_path(movie_id: movie["id"]), method: :delete, remote: true, class: "btn btn-secondary" do %>
      ♥
    <% end %>
  <% else %>
    <%= link_to movie_favorite_path(movie_id: movie["id"]), method: :post, remote: true, class: "btn btn-secondary" do %>
      ♡
    <% end %>
  <% end %>
<% end %>