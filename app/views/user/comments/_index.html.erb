<div class="mt-3">
  <h5><i class="fa-solid fa-comment"></i> コメント</h5>
  <% review.comments.each do |comment| %>
    <div class="mb-5">
      <div class="col-7 mb-2">
        <%= link_to user_path(comment.user) do %>
          <%= image_tag comment.user.get_profile_image(50,50) %>
          <%= comment.user.name %>
        <% end %>
      </div>
      <div class="ml-3">
        <%= comment.comment %><br>
        <%= comment.created_at.strftime('%Y/%m/%d') %>
        <% if comment.user == current_user %>
          <%= link_to "削除", movie_review_comment_path(review.movie_id, review.id, comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか？" }  %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>