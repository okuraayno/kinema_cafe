<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h3><i class="fa-regular fa-envelope"></i> Contact</h3>
      <hr>

      <%= form_with model: @contact, url: confirm_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "お名前" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
  
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :message, "お問い合わせ内容" %>
          <%= f.text_area :message, size: "10x10", class: "form-control" %>
        </div>

        <div>
          <%= f.submit "入力内容確認", class: "float1" %>
        </div>
  
      <% end %>
      <hr>
    </div>
  </div>
</div>