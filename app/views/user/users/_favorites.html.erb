<% favorites.each_with_index do |favorite, index| %>
  <table class='my-4 mx-3'>
    <tr>
      <td>
        <%= link_to movie_path(movie[index]['id']) do %>
          <% if movie[index]['poster_path'] %>
            <%= image_tag 'https://image.tmdb.org/t/p/w200' + movie[index]['poster_path'], size: '50x80', style: "max-width: 100%;" %>
          <% else %>
            <%= image_tag 'no_image_tate.jpg', size: '50x80', style: "max-width: 100%;" %>
          <% end %>
          <%= movie[index]['title'] %>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>